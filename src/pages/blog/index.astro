---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Blog â€” TradeStudio" description="Articles about AI-powered trading analysis, strategy generation, and desktop charting.">

  <section class="py-20 px-6">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-4xl font-extrabold md:text-5xl">Blog</h1>
      <p class="mt-4 text-lg text-text-secondary">Insights on AI trading analysis, strategy development, and building TradeStudio.</p>

      <div class="mt-12 space-y-8">
        {posts.map(post => (
          <article class="group rounded-xl border border-border bg-bg-secondary p-6 transition-all hover:bg-bg-tertiary hover:border-accent-green/30">
            <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="block">
              <time class="text-sm text-text-secondary" datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <h2 class="mt-2 text-xl font-bold text-text-primary group-hover:text-accent-green transition-colors">
                {post.data.title}
              </h2>
              <p class="mt-2 text-sm text-text-secondary leading-relaxed">
                {post.data.description}
              </p>
              <div class="mt-3 flex flex-wrap gap-2">
                {post.data.tags.map(tag => (
                  <span class="rounded-full bg-bg-tertiary px-2.5 py-0.5 text-xs text-text-secondary">
                    {tag}
                  </span>
                ))}
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

</BaseLayout>
