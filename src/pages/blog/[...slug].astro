---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} â€” Tradevoy Blog`} description={post.data.description}>

  <article class="py-20 px-6">
    <div class="mx-auto max-w-3xl">
      <a href="/blog" class="text-sm text-accent-blue hover:text-text-primary transition-colors">&larr; Back to blog</a>

      <header class="mt-6">
        <time class="text-sm text-text-secondary" datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <h1 class="mt-2 text-4xl font-extrabold leading-tight">{post.data.title}</h1>
        <div class="mt-4 flex flex-wrap gap-2">
          {post.data.tags.map(tag => (
            <span class="rounded-full bg-bg-tertiary px-2.5 py-0.5 text-xs text-text-secondary">
              {tag}
            </span>
          ))}
        </div>
      </header>

      <div class="prose-custom mt-12">
        <Content />
      </div>
    </div>
  </article>

</BaseLayout>

<style is:global>
  .prose-custom {
    color: var(--color-text-secondary);
    line-height: 1.8;
  }
  .prose-custom h2 {
    color: var(--color-text-primary);
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .prose-custom h3 {
    color: var(--color-text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .prose-custom p {
    margin-bottom: 1.25rem;
  }
  .prose-custom a {
    color: var(--color-accent-blue);
    text-decoration: none;
  }
  .prose-custom a:hover {
    text-decoration: underline;
  }
  .prose-custom ul, .prose-custom ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  .prose-custom li {
    margin-bottom: 0.5rem;
  }
  .prose-custom code {
    background-color: var(--color-bg-tertiary);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent-green);
  }
  .prose-custom pre {
    background-color: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }
  .prose-custom pre code {
    background: none;
    padding: 0;
    color: var(--color-text-primary);
  }
  .prose-custom blockquote {
    border-left: 3px solid var(--color-accent-purple);
    padding-left: 1rem;
    margin-bottom: 1.25rem;
    color: var(--color-text-secondary);
    font-style: italic;
  }
  .prose-custom strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  .prose-custom hr {
    border-color: var(--color-border);
    margin: 2rem 0;
  }
</style>
